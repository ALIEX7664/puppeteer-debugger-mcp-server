{
  "name": "@aliex7664/puppeteer-debugger-mcp",
  "version": "2.0.0",
  "private": false,
  "description": "MCP Server for browser debugging via CDP",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "bin": {
    "puppeteer-debugger-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsup --watch",
    "inspector": "pnpm run build && pnpm dlx  @modelcontextprotocol/inspector node dist/index.js",
    "inspector:debug": "pnpm run build && pnpm dlx  @modelcontextprotocol/inspector node --inspect-brk=9229 dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:local": "tsx scripts/test-local.ts"
  },
  "keywords": [
    "mcp",
    "browser",
    "debugging",
    "cdp",
    "puppeteer"
  ],
  "author": {
    "name": "aliex7664",
    "url": "https://github.com/ALIEX7664/puppeteer-debugger-mcp-server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ALIEX7664/puppeteer-debugger-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/ALIEX7664/puppeteer-debugger-mcp-server/issues"
  },
  "homepage": "https://github.com/ALIEX7664/puppeteer-debugger-mcp-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "puppeteer": "^21.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "semantic-release": "^25.0.2",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "pkgRoot": "."
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "releasedLabels": false
        }
      ]
    ]
  }
}
